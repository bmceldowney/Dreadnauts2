    header.db-navbar.navbar.navbar-inverse(role="header")
        div.navbar-header
            a(href="/").navbar-brand Dreadnauts
        ul.nav.navbar-nav.db-navbar-right
            li: a(href="#quicksearch", data-toggle="collapse", data-target="#db-nav-quicksearch").glyphicon.glyphicon-search.collapsed
